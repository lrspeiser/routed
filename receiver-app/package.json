{
  "name": "routed",
  "version": "0.1.0",
  "private": true,
  "author": "Routed",
  "description": "Routed desktop receiver",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder --mac dmg"
  },
  "build": {
    "appId": "com.routed.app",
    "productName": "Routed",
    "files": [
      "main.js",
      "preload.js",
      "renderer.html",
      "package.json",
      "routed_icon.png"
    ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ],
      "identity": null,
      "hardenedRuntime": false,
      "extendInfo": { "LSUIElement": true }
    },
    "dmg": {}
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "wscat": "^6.1.0"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  }
}
