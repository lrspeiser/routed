{
  "name": "notification-receiver",
  "version": "0.1.0",
  "private": true,
  "author": "Routed",
  "description": "Desktop receiver for Notification Hub",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder --mac dmg"
  },
  "build": {
    "appId": "com.routed.notification.receiver",
    "productName": "Notification Receiver",
    "files": [
      "main.js",
      "preload.js",
      "renderer.html",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg"],
      "identity": null
    }
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  }
}
